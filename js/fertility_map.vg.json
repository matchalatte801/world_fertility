{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Fertility in 2021",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://github.com/matchalatte801/world_fertility/world_fertility/js/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://github.com/matchalatte801/world_fertility/js/oceans.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://github.com/matchalatte801/world_fertility/js/graticules.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://github.com/matchalatte801/world_fertility/data/fertility_cleaned.csv"
            },
            "key": "Country Name",
            "fields": ["2021"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "2021",
          "type": "quantitative",
          "title": "Total Fertility Rate",
          "scale": {"scheme": "reds"},
          "legend": {"titleAlign": "center"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "2021", "type": "quantitative", "title": "Total Fertility Rate"}
        ]
      }
    }
  ]
}