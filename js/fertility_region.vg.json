{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "title": "Fertility Rate",
  "data": {
    "url": "https://raw.githubusercontent.com/matchalatte801/world_fertility/main/data/region_fertility.csv"
  },
  "params": [
    {
    "name": "region_selection",
    "bind": {
    "input": "select",
    "options": [
    null,
    "East Asia & Pacific",
    "Europe & Central Asia",
    "Latin America & Caribbean",
    "Middle East & North Africa",
    "North America",
    "South Asia",
    "Sub-Saharan Africa"
    ],
    "labels":[
    "Show All",
    "East Asia & Pacific",
    "Europe & Central Asia",
    "Latin America & Caribbean",
    "Middle East & North Africa",
    "North America",
    "South Asia",
    "Sub-Saharan Africa"
    ],
    "name": "Continent Selection: "
    }
  }
],
"transform": [{"filter": "region_selection == null || datum.Region == region_selection"}],
  "selection": {
    "region_highlight": {
      "type": "multi",
      "fields": [
        "Region"
      ],
      "bind": "legend"
    }
  },
  "mark": {
    "type": "line",
    "strokeWidth": 3.5},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year",
      "scale": {
        "domain": [
          "1960",
          "2021"
        ]
      }
    },
    "y": {
      "field": "fertility",
      "type": "quantitative",
      "title": "Fertility Rate"
    },
    "color": {
      "field": "Region",
      "type": "nominal"
    },
    "opacity": {
      "condition": {
        "selection": "region_highlight",
        "value": 0.6
      },
      "value": 0.1
    },
    "tooltip": [
      {"field": "Region", "type": "nominal"},
      {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
      {"field": "fertility", "type": "quantitative", "format": ".2f", "title": "Fertility"}
      ]
      
  }
}